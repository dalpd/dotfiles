[global/wm]
margin-top = 5
margin-bottom = 5


[bar/mybar]


font-0 = Gidole:size=12;2
font-1 = Font Awesome 5 Brands:size=10;1
font-2 = WeatherIcons:size=13;3



monitor = ${env:MONITOR}
width = 100%
height = 23
offset-x = 0
offset-y = 0
fixed-center = true

background = #000f0f0f
;background = ${xrdb:color0:#6d15d8}

foreground = #dfdfdf
;foreground = ${xrdb:color15:#fff}

;colora = ${xrdb:color0:#fff}
;colorb = ${xrdb:color15:#6d15d8}

colora = #000f0f0f
colorb = #dfdfdf

;colorat = ${xrdb:color0:#fff}
;colorbt = ${xrdb:color15:#000}


colorat = #dfdfdf
colorbt = #000f0f0f

warning = #f5a70a

overline-size = 0
overline-color = #151515
underline-size = 0
underline-color = #151515

border-bottom-size = 0
border-bottom-color = #333

padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0


modules-left = i3 

modules-center = space1  spacelt space1  weather space1 space1t space1 filesystem wlan space1 space1t space1 battery  space1 space1t space1 spotify
space1 space1t space1 

modules-right = 

tray = right | left
tray-position = right
tray-padding = 60
tray-detached = false
tray-offset-y = 0
tray-maxsize = 16
tray-transparent = false
enable-ipc = false

